<% modules = data_sort_by_title(data_select_by(data.modules, type)) %>
<h2 class="subsection-title"><%= title %></h2>
<div class="module-list">
  <% modules.each do |id, m| %>
    <div class="module-list__item">
      <a href="<%= m.url %>" target="_blank">
        <img src="<%= image_clean_path(m.image) %>" alt="<%= m.title %>" class="module-list__image"/>
        <div class="module-list__content">
          <h2 class="module-list__title"><%= m.title %></h2>
          <p><%= m.description %></p>
        </div>
      </a>
    </div>
  <% end %>
</div>