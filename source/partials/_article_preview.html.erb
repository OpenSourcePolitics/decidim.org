<article class="post-preview">
  <h2 class="page-title page-title--simplemargin">
    <a href="<%= article.url %>"><%= article.title %></a>
    <time class="post-date"><%= article.date.strftime('%d/%m/%Y') %></time>
  </h2>
  <%= article.summary %>
  <a href="<%= article.url %>" class="post-preview__more">Read more</a>
</article>
